{
  "name": "@briansunter/raindrop-mcp",
  "version": "1.1.7",
  "description": "MCP server for Raindrop.io API integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "author": "Brian Sunter",
  "bin": {
    "raindrop-mcp": "dist/index.js",
    "briansunter-raindrop-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    ".claude-plugin",
    ".mcp.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/briansunter/raindrop-mcp.git"
  },
  "keywords": [
    "mcp",
    "raindrop",
    "bookmarks",
    "api",
    "model-context-protocol"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "bun run src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "node -r dotenv/config dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "RAINDROP_MCP_SKIP_AUTO_START=1 bun test",
    "test:watch": "RAINDROP_MCP_SKIP_AUTO_START=1 bun test --watch",
    "test:coverage": "RAINDROP_MCP_SKIP_AUTO_START=1 bun test --coverage",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.34.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/npm": "^12.0.0",
    "@types/bun": "^1.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.0.0",
    "semantic-release": "^24.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
